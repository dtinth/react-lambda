{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "esm",
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
